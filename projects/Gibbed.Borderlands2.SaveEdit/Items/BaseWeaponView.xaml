               Grid.Column="0"
               HorizontalContentAlignment="Right"
               Content="Set:" />
        <Label Grid.Row="0"
               Grid.Column="1"
               HorizontalContentAlignment="Left"
               Content="{Binding Path=AssetLibrarySetName}" />
        <Label Grid.Row="1"
               Grid.Column="0"
               HorizontalContentAlignment="Right"
               Content="Type:" />
